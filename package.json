{
	"name": "charmix",
	"version": "0.0.1",
	"preferGlobal": "true",
	"directories": {
		"bin": "./bin"
	},
	"scripts": {
		"test": "jest",
		"build:package": "NODE_ENV=production gulp",
		"build:dev": "gulp watch",
		"build:clean": "gulp clean",
		"prettify": "prettier --write \"{*,**/*}.{ts,tsx,js,jsx}\" && eslint --fix \"{*,**/*}.{ts,tsx,js,jsx}\"",
		"lint:text": "npx textlint \"{*,**/*}.md\"",
		"packages:upgrade": "npx npm-check-updates -u",
		"configure": "husky install",
		"prepare": "npm run configure"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@types/argparse": "^2.0.10",
		"@types/fs-extra": "^9.0.13",
		"@types/git-clone": "^0.2.0",
		"@types/jest": "^27.5.1",
		"@types/node": "^18.6.1",
		"@types/npm-registry-fetch": "^8.0.4",
		"@types/tar": "^6.1.1",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"eslint": "^8.16.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.4.1",
		"merge-stream": "^2.0.0",
		"prettier": "^2.6.2",
		"textlint": "^12.1.1",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-common-misspellings": "^1.0.1",
		"textlint-rule-write-good": "^2.0.0",
		"ts-jest": "^28.0.2",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"argparse": "^2.0.1",
		"axios": "^0.27.2",
		"fp-ts": "^2.12.2",
		"fs-extra": "^10.1.0",
		"git-clone": "^0.2.0",
		"glob": "^7.1.6",
		"glob-promise": "^4.2.2",
		"io-ts": "^2.2.16",
		"npm-registry-fetch": "^13.3.0",
		"tar": "^6.1.11"
	}
}
